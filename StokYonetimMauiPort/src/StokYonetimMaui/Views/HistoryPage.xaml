<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:StokYonetimMaui.ViewModels"
             xmlns:models="clr-namespace:StokYonetimMaui.Models"
             x:Class="StokYonetimMaui.Views.HistoryPage"
             x:Name="HistoryPageRoot"
             x:DataType="viewModels:HistoryViewModel"
             Title="Geçmiş">
    <RefreshView Command="{Binding LoadCommand}" IsRefreshing="{Binding IsBusy}">
        <CollectionView ItemsSource="{Binding Records}" SelectionMode="None" Margin="16">
            <CollectionView.EmptyView>
                <Label Text="Geçmiş kaydı bulunmuyor." TextColor="{StaticResource TextSecondaryColor}" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:HistoryRecord">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Sil" BackgroundColor="{StaticResource DangerColor}" Command="{Binding Source={x:Reference HistoryPageRoot}, Path=BindingContext.RemoveCommand}" CommandParameter="{Binding .}" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Frame BackgroundColor="White" CornerRadius="12" Padding="16" Margin="0,0,0,12">
                            <VerticalStackLayout>
                                <Label Text="{Binding Description}" FontAttributes="Bold" />
                                <Label Text="{Binding Date, StringFormat='{0:dd.MM.yyyy HH:mm}'}" TextColor="{StaticResource TextSecondaryColor}" />
                                <Button Text="Detay"
                                        Command="{Binding Source={x:Reference HistoryPageRoot}, Path=BindingContext.ShowDetailsCommand}"
                                        CommandParameter="{Binding .}"
                                        Style="{StaticResource OutlineButtonStyle}" />
                            </VerticalStackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </RefreshView>
</ContentPage>
