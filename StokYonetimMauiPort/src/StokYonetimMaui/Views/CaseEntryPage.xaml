<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="StokYonetimMaui.Views.CaseEntryPage"
             x:Name="CasePage"
             Title="Vaka Girişi">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Malzeme Ekle"
                     Command="{Binding AddMaterialCommand}" />
        <ToolbarItem Text="Temizle"
                     Order="Secondary"
                     Command="{Binding ClearMaterialsCommand}" />
    </ContentPage.ToolbarItems>
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <DatePicker Date="{Binding CaseDate, Mode=TwoWay}" />
            <Entry Placeholder="Hastane adı" Text="{Binding HospitalName, Mode=TwoWay}" />
            <Entry Placeholder="Doktor" Text="{Binding DoctorName, Mode=TwoWay}" />
            <Entry Placeholder="Hasta" Text="{Binding PatientName, Mode=TwoWay}" />
            <Editor Placeholder="Notlar" Text="{Binding Notes, Mode=TwoWay}" AutoSize="TextChanges" />

            <Label Text="Malzemeler" Style="{StaticResource SectionHeaderStyle}" />
            <CollectionView ItemsSource="{Binding Materials}" SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="Malzeme eklemek için üstteki butonu kullanın." TextColor="{StaticResource TextSecondaryColor}" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Kaldır" BackgroundColor="{StaticResource DangerColor}" Command="{Binding Source={x:Reference CasePage}, Path=BindingContext.RemoveMaterialCommand}" CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Frame Padding="16" Margin="0,0,0,12" BackgroundColor="White" CornerRadius="12">
                                <VerticalStackLayout>
                                    <Label Text="{Binding MaterialName}" FontAttributes="Bold" />
                                    <Label Text="Seri/Lot: {Binding SerialLotNumber}" TextColor="{StaticResource TextSecondaryColor}" />
                                    <Label Text="Adet: {Binding Quantity}" TextColor="{StaticResource TextSecondaryColor}" />
                                </VerticalStackLayout>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Kaydet" Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButtonStyle}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
