<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:StokYonetimMaui.ViewModels"
             xmlns:models="clr-namespace:StokYonetimMaui.Models"
             x:Class="StokYonetimMaui.Views.HomePage"
             x:DataType="viewModels:HomeViewModel"
             Title="Ana Sayfa">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="{Binding WelcomeText}" Style="{StaticResource TitleLabelStyle}" />

            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto">
                <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,8,0">
                    <VerticalStackLayout>
                        <Label Text="Toplam Stok" TextColor="{StaticResource TextSecondaryColor}" />
                        <Label Text="{Binding StockCount}" FontSize="24" FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Column="1" Style="{StaticResource CardBorderStyle}" Margin="4,0">
                    <VerticalStackLayout>
                        <Label Text="Vaka" TextColor="{StaticResource TextSecondaryColor}" />
                        <Label Text="{Binding CaseCount}" FontSize="24" FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Margin="8,0,0,0">
                    <VerticalStackLayout>
                        <Label Text="Kontrol Listeleri" TextColor="{StaticResource TextSecondaryColor}" />
                        <Label Text="{Binding ChecklistCount}" FontSize="24" FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <Label Text="Yaklaşan SKT" Style="{StaticResource SectionHeaderStyle}" />
            <CollectionView ItemsSource="{Binding ExpiringSoon}">
                <CollectionView.EmptyView>
                    <Label Text="Yakın zamanda SKT'ye girecek ürün bulunmuyor." TextColor="{StaticResource TextSecondaryColor}" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:StockItem">
                        <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,12">
                            <VerticalStackLayout>
                                <Label Text="{Binding MaterialName}" FontAttributes="Bold" />
                                <Label Text="{Binding SerialLotNumber, StringFormat='Seri/Lot: {0}'}" TextColor="{StaticResource TextSecondaryColor}" />
                                <Label Text="{Binding ExpiryDate, StringFormat='SKT: {0:dd.MM.yyyy}'}" TextColor="{StaticResource DangerColor}" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
