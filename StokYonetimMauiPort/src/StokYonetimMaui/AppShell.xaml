<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:StokYonetimMaui.Views"
    x:Class="StokYonetimMaui.AppShell"
    Title="Stok Yönetim">

    <FlyoutItem Title="Ana Sayfa"
                Route="Home">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Stok"
                Route="Stock">
        <ShellContent ContentTemplate="{DataTemplate views:StockPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Vaka Girişi"
                Route="CaseEntry">
        <ShellContent ContentTemplate="{DataTemplate views:CaseEntryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Kontrol Listesi"
                Route="Checklist">
        <ShellContent ContentTemplate="{DataTemplate views:ChecklistPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Geçmiş"
                Route="History">
        <ShellContent ContentTemplate="{DataTemplate views:HistoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Ayarlar"
                Route="Settings">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>

</Shell>
